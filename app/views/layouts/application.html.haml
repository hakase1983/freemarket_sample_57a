%html
  %head
    %meta{content: "text/html; charset=UTF-8", "http-equiv": "Content-Type"}/
    %title FreemarketSample57a 
    %link{href: "//cdnjs.cloudflare.com/ajax/libs/animate.css/3.2.0/animate.min.css", rel: "stylesheet"}/
