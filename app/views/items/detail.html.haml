          %tbody
            %tr
              %th 出品者
              %td
                =link_to root_path do
                  aaa
                %div
            %tr
              %th カテゴリー
              %td
                =link_to root_path do
                  %div レディース
                =link_to root_path do
                  .item-detail-table-sub-category
